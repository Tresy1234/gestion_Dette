{% extends 'base.html.twig' %}

{% block title %}Liste des Clients{% endblock %}

{% block content %}
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2>Liste des Clients</h2>
        <a href="{{ path('dette.create') }}" class="btn btn-success">Créer un Client</a>
    </div>

    <form action="{{ path('client.create') }}" method="POST" class="mb-3">
        <div class="row mb-3 align-items-end">
            <div class="col-md-4">
                <label for="surname" class="form-label">Surname</label>
                <input type="text" class="form-control" id="surname" name="surname" placeholder="surname" required>
            </div>
            <div class="col-md-4">
                <label for="telephone" class="form-label">Téléphone</label>
                <input type="text" class="form-control" id="telephone" name="telephone" placeholder="Téléphone" required>
            </div>
            <div class="col-md-4">
                <label for="adresse" class="form-label">Adresse</label>
                <input type="text" class="form-control" id="adresse" name="adresse" placeholder="Adresse">
            </div>
        </div>
        <button type="submit" class="btn btn-primary">Ajouter</button>
    </form>

    <table class="table table-bordered">
        <thead>
            <tr>
                <th>Nom</th>
                <th>Téléphone</th>
                <th>Adresse</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            {% for client in clients %}
                <tr>
                    <td>{{ client.surname }}</td>
                    <td>{{ client.telephone }}</td>
                    <td>{{ client.adresse }}</td>
                    <td>
                        <a href="{{ path('client-dette', {id: client.id}) }}" class="btn btn-primary btn-sm">Dettes</a>
                        {# <a href="" class="btn btn-danger btn-sm" onclick="return confirm('Are you sure?')">Supprimer</a> #}
                    </td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
{% endblock %}
